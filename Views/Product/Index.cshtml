@model IEnumerable<WebEShopper.Models.sanPham>
@{
    ViewBag.Title = "Index";
}

<section id="advertisement">
    <div class="container">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @Html.Partial("_Categories")
            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                            @foreach (var item in Model)
                            {
                            <div class="col-xl-4 col-lg-4 col-md-6" style="height:380px">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <a href="@Url.Action("index", "ProductDetail", new { MaSanPham = item.maSP })">
                                                <img src="@item.hinhDD" alt="sản phẩm" />
                                                <h2>@String.Format("{0:#,### đ}", item.giaBan) </h2>
                                                <p style="height: 60px">@item.tenSP</p>
                                            </a>
                                            @using (Html.BeginForm("AddToCart", "Home", FormMethod.Post))
                                            {
                                                <input name="maSP" type="hidden" value="@item.maSP" />
                                                <button class="btn btn-default add-to-cart">
                                                    <i class="fa fa-shopping-cart"></i>
                                                    Thêm vào giỏ hàng
                                                </button>

                                            }
                                        </div>

                                    </div>
                                </div>
                            </div>
                                            }
                    <div class="row" id="results"></div>

                    <div class="loading">
                        <img src="~/images/Loading_icon.gif" /> Loading...
                    </div>

                    <ul class="pager">
                        <li><a href="0">|<<</a></li>
                        <li><a href="0"><</a></li>
                        <li><a href="0">></a></li>
                        <li><a href="0">>>|</a></li>
                    </ul>
                </div><!--features_items-->
                        </div>
        </div>
    </div>
</section>

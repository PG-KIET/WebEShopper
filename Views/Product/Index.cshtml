@using WebEShopper.Models
@{
    ViewBag.Title = "Index";
}

<section id="advertisement">
    <div class="container">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Category</h2>
                    <div class="panel-group category-products" id="accordian">
                        <!--category-productsr-->
                        @{
                            foreach (loaiSP i in Common.GetCategories())
                            {
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a href="@Url.Action("index", "Product", new { maloai = i.maLoai }, null)">@i.loaiSP1</a>
                                        </h4>
                                    </div>
                                </div>
                            }
                        }

                    </div><!--/category-products-->


                    <div class="price-range">
                        <!--price-range-->
                        <h2>Price Range</h2>
                        <div class="well text-center">
                            <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="30000000" data-slider-step="50000" data-slider-value="[0,100000]" id="sl2"><br />
                            <b class="pull-left">0 đ</b> <b class="pull-right">30,000,000 đ</b>
                        </div>
                    </div><!--/price-range-->

                    <div class="shipping text-center">
                        <!--shipping-->
                        <img src="~/images/home/shipping.jpg" alt="" />
                    </div><!--/shipping-->

                </div>
            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    @{
                            foreach (sanPham sp in Common.GetSanPhams())
                            {
                            <div class="col-xl-4 col-lg-4 col-md-6" style="height:380px">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <a href="@Url.Action("index", "ProductDetail", new { MaSanPham = sp.maSP })">
                                                <img src="@sp.hinhDD" alt="sản phẩm" />
                                                <h2>@String.Format("{0:#,### đ}", sp.giaBan) </h2>
                                                <p style="height: 60px">@sp.tenSP</p>
                                            </a>
                                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            }
                        }
                    <div class="row" id="results"></div>

                    <div class="loading">
                        <img src="~/images/Loading_icon.gif" /> Loading...
                    </div>

                    <ul class="pager">
                        <li><a href="0">|<<</a></li>
                        <li><a href="0"><</a></li>
                        <li><a href="0">></a></li>
                        <li><a href="0">>>|</a></li>
                    </ul>
                </div><!--features_items-->
                        </div>
        </div>
    </div>
</section>
